<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.PeisoApp" parent="Theme.MaterialComponents.DayNight.NoActionBar.Bridge">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/color_theme</item>
        <item name="colorAccent">@color/color_theme</item>
        <item name="colorPrimaryVariant">@color/color_background</item>
        <item name="colorOnPrimary">@color/color_theme</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
        <item name="android:windowBackground">@color/color_background</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">16sp</item>
        <item name="android:fontFamily">@font/regular</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:windowSplashScreenBackground" tools:targetApi="s">@color/color_background</item>
        <item name="android:windowSplashScreenAnimatedIcon" tools:targetApi="s">@mipmap/splash_logo</item>
    </style>

    <style name="Theme.PeisoApp.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="Theme.PeisoApp.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="Theme.PeisoApp.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />
</resources>